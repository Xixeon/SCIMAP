<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Phrajom">

    <ImageView
            android:layout_width="403dp"
            android:layout_height="578dp" app:srcCompat="@drawable/background"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="อาคารพระจอมเกล้า"
            android:layout_width="317dp"
            android:layout_height="64dp"
            android:id="@+id/textView2" android:textSize="35sp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" android:layout_marginStart="22dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp"
    />

    <TextView
            android:id="@+id/tv_floor"
            android:layout_width="146dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>
    <ImageView
            android:layout_width="323dp"
            android:layout_height="205dp" app:srcCompat="@drawable/phrajom"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.058"
    />
    <Spinner
            android:id="@+id/sp_floor"
            android:layout_width="144dp"
            android:layout_height="59dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.118"
            android:popupBackground="#FFFFFFFF"
            android:padding="20dp"
            android:prompt="@string/selectfloor"
            android:entries="@array/floor"/>

    <TextView
            android:text="ค้นหาชั้น :"
            android:layout_width="96dp"
            android:layout_height="49dp"
            android:id="@+id/textView4"
            android:layout_marginStart="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp"
            android:textSize="18sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:textStyle="bold"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/btn_search"
            android:id="@+id/btnSearch"
            android:background="#00000000" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="145dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintHorizontal_bias="0.471"
    />
    <Spinner
            android:id="@+id/sp_room"
            android:layout_width="144dp"
            android:layout_height="59dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.125"
            android:popupBackground="#FFFFFFFF"
            android:padding="20dp"

    />

</android.support.constraint.ConstraintLayout>